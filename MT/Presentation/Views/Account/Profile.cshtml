@model Application.DTOs.GetUserDTO

@{
    ViewData["Title"] = "Profile";
}
<div>
    <form id="profileForm" class="col-md-5">
        <div class="form-group">
            <input name="user_id" id="user_id" hidden value="@Model.Id" />
        </div>
        <div class="form-group my-2">
            <label>Name</label>
            <input name="user_name" id="user_name" class="form-control" value="@Model.Name" />
        </div>
        <div class="form-group my-2">
            <label>Email</label>
            <input name="user_email" id="user_email" class="form-control" value="@Model.Email" />
        </div>
        <div class="form-group d-grid my-2">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

