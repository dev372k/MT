@model Presentation.Models.ScraperModel

@{
    ViewData["Title"] = "Tool";
    string url = Context.Request.Query["url"];
}

<div class="col-md-4 mx-auto">
    <div>
        <form id="urlForm" class="input-group mb-3">
            <input type="url" class="form-control" placeholder="URL" name="url" value="@url">
            <input value="false" name="exportCSV" id="exportCSV" hidden/>
            <button type="submit" class="btn btn-primary input-group-text" id="basic-addon1">Extract</button>
        </form>
    </div>

    @{
        if (Model.IsFound == true)
        {
            if (Model.Emails != null && Model.Emails.Count() > 0)
            {
                foreach (var email in Model.Emails)
                {
                    <div class="alert alert-dark" role="alert">
                        @email
                    </div>
                }

                <div>
                    <a onclick="openModal()" class="btn btn-primary">Save</a>
                    <a onclick="exportCSV()" class="btn btn-secondary">Save as Excel</a>
                    <a onclick="reset()" class="btn btn-secondary">Reset</a>
                </div>
            }
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                No email(s) found!!!
            </div>
        }
    }
</div>

<div class="d-none">
    <div id="alert-message-template">
        <div>
            <h6>Group by</h6>
            <span class="text-muted f-sm">Add multiple groups</span>
        </div>
        <select class="js-example-basic-multiple" name="states[]" multiple="multiple" style="width:100%">
            <option value="b">Business</option>
            <option value="s">School</option>
        </select>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(() => {
            $('.js-example-basic-multiple').select2();
        })
        const reset = () => {
            $('#urlForm').trigger("reset");
        }

        const exportCSV = () => {
            $('#exportCSV').val(true)
            $('#urlForm').trigger("submit");
        }

        const openModal = () => {
            bootbox.alert($('#alert-message-template'), () => {
                console.log("Testing...");
            });
        }
    </script>
}

